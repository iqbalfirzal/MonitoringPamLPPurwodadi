<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lpambarawa.app.monitoring_pam">

    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_maskot_lp_ambarawa"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_maskot_lp_ambarawa"
        android:supportsRtl="true"
        android:theme="@style/Theme.MonitoringEWasrik">
        <activity android:name="lpambarawa.app.monitoring_pam.RiwayatLapsusAct" />
        <activity android:name="lpambarawa.app.monitoring_pam.ArahanAct" />
        <activity android:name="lpambarawa.app.monitoring_pam.DetailLapsusAct"
            android:exported="false">
            <intent-filter>
                <action android:name="BUKA_ACTIVITY_LAPSUS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="lpambarawa.app.monitoring_pam.ShowEmergencyCall"
            android:exported="false">
            <intent-filter>
                <action android:name="BUKA_ACTIVITY_EMERGENCY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="lpambarawa.app.monitoring_pam.Welcome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="lpambarawa.app.monitoring_pam.LapsusAct" />
        <activity android:name="lpambarawa.app.monitoring_pam.KontrolAct" />
        <activity android:name="lpambarawa.app.monitoring_pam.TrafficAct" />
        <activity android:name="lpambarawa.app.monitoring_pam.MainActivity" />
        <activity android:name="lpambarawa.app.monitoring_pam.ShowPhoto" android:theme="@style/Theme.Transparent" />
        <service
            android:name="lpambarawa.app.monitoring_pam.ThisMonitorAppFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>