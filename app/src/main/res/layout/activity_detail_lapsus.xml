<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_wave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    tools:context=".DetailLapsusAct">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/detaillapsustxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_back_detaillapsus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start|center"
                android:background="@drawable/bg_button"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:text="Detail Laporan Khusus  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:theme="@style/TitleTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detaillapsustxt">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/fotopelapor"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_account"
                android:tint="@android:color/darker_gray"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#E02E2D2D" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="WAKTU LAPORAN"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/waktulaporannya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="18sp"
                android:background="@drawable/bg_shape"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="WAKTUNYA"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="NAMA PELAPOR"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/namapelapornya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:textSize="18sp"
                    android:background="@drawable/bg_shape"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="NAMANYA"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="NIP PELAPOR"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nippelapornya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="18sp"
                android:background="@drawable/bg_shape"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="NIPNYA"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="DETAIL LAPORAN"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/laporannya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_marginVertical="5dp"
                android:textSize="18sp"
                android:background="@drawable/bg_shape"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="LAPORANNYA"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="FOTO"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ketfoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Laporan Tanpa Foto"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="11dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/fotonya"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_openmap"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:text="LIHAT LOKASI"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="BERIKAN INTRUKSI / ARAHAN"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/instruksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="top"
                    android:hint=""
                    android:inputType="text"
                    android:minHeight="100dp"
                    android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789,."
                    android:padding="12dp"
                    android:layout_marginHorizontal="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:theme="@style/EditTextTheme" />

                <Button
                    android:id="@+id/kiriminstruksi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="KIRIM INSTRUKSI"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>