<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/addwbptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="LP Purwodadi   "
            android:theme="@style/TitleTextStyle"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@id/welcomemainbody"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/welcomemainbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toTopOf="@+id/welcomemainbody2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:src="@drawable/ic_monitoring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:minWidth="100dp"
                    android:maxWidth="500dp"
                    android:minHeight="240dp"
                    android:maxHeight="600dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textSize="20sp"
                        android:text="DATA HARI INI ( 24 JAM )"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:backgroundTint="@color/black"
                            android:background="@drawable/bg_shape"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center">

                            <FrameLayout
                                android:id="@+id/layclickcontrolpam"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="?selectableItemBackground"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/datakontrolpam"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="35sp"
                                        android:textStyle="bold"
                                        android:gravity="center"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Laporan Kontrol\nPengamanan"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:gravity="center"/>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:backgroundTint="@color/black"
                            android:background="@drawable/bg_shape"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center">

                            <FrameLayout
                                android:id="@+id/layclicklapsus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="?selectableItemBackground"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                <TextView
                                    android:id="@+id/datalapsus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="35sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Laporan Khusus\nPengamanan"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:backgroundTint="@color/black"
                            android:background="@drawable/bg_shape"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center">

                            <FrameLayout
                                android:id="@+id/layclickjumlahpetugas"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="?selectableItemBackground"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/datapetugas"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="35sp"
                                        android:textStyle="bold"
                                        android:gravity="center"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Jumlah Petugas\nPengamanan"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:gravity="center"/>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/welcomemainbody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            app:layout_constraintWidth_max="600dp"
            app:layout_constraintTop_toBottomOf="@id/welcomemainbody"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5">

            <Button
                android:id="@+id/btn_instruksi"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="BERIKAN INSTRUKSI / ARAHAN"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_econtrol"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="LAPORAN KONTROL"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_elapsus"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="LAPORAN KHUSUS"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:textSize="10dp"
                android:text="Copyright 2023 / LP Purwodadi"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>